---
const { current = '' } = Astro.props;
const links = [
  { href: '/', label: 'Home', key: 'home' },
  { href: '/news', label: 'News', key: 'news' },
  { href: '/anniversari', label: 'Anniversari', key: 'anniversari' },
  { href: '/compleanni', label: 'Compleanni', key: 'compleanni' },
];
---
<header class="topbar">
  <div class="container">
    <a href="/" class="brand" aria-label="SDAC Magazine - Home">
      <img
        src="/images/uploads/sdac-mag-logo-8.png"
        alt="SDAC Magazine"
        class="brand-logo"
      />
    </a>

    <nav class="navrow" aria-label="Categorie">
      {links.map((l) => (
        <a class="btn" href={l.href} aria-current={current === l.key ? 'page' : undefined}>{l.label}</a>
      ))}
      <form class="search" action="/search" role="search" aria-label="Ricerca nel sito">
        <span class="icon" aria-hidden="true">ðŸ”Ž</span>
        <input name="q" type="search" placeholder="Cerca titoli, nomi, tagâ€¦" />
      </form>
    </nav>
  </div>
</header>
