---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title = 'SDAC Magazine', current = '' } = Astro.props;
---
<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Rivista online di cinema della SDAC (Genova): news, anniversari e compleanni del cinema." />
  </head>
  <body>
    <Header current={current} />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>
